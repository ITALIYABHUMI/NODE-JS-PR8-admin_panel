<%- include('../header') %>

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Hello, <span>Welcome Here</span></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                                <li class="breadcrumb-item active">Table-Basic</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <!-- /# row -->

            <a href="/addproduct" class="btn btn-primary mx-5 mt-3 mb-5">Add
                product</a>

            <div class="row">
                <% data.map((val)=>{
                %>
                <div class="card col-3 mx-5"
                    style="width: 100%;">
                    <img src="<%=val.image%>" class="card-img-top " alt="..." style="width: 100%;;height: 200px; object-fit:contain">
                    <div class="card-body">
                        <ul class="list-group list-group-flush mt-3">
                            <li class="list-group-item p text-dark">Category : <%=val.categoryId.category%></li>
                            <li class="list-group-item p text-dark">SubCategory
                                : <%=val.subcategoryId.subcategory%></li>
                            <li class="list-group-item p text-dark">Product : <%=val.product%></li>
                            <li class="list-group-item p text-dark">Price : <%=val.price%></li>
                            <li class="list-group-item p text-dark">Qty : <%=val.qty%></li>
                            <li class="list-group-item p text-dark">Description:
                                <%=val.description%></li>
                        </ul>
                        <div class="mt-4 mx-3">
                            <button
                                class="btn btn-danger">
                                <a
                                    href="/deleteproduct/<%=val.id%>"
                                    class="fa fa-trash text-white"></a>
                            </button>
                            <button
                                class="btn btn-primary mx-3">
                                <a
                                    href="/editproduct?id=<%=val.id%>"
                                    class="fa fa-edit text-white "></a>
                            </button>
                        </div>
                    </div>
                </div>
                <%})%>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>