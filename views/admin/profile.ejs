<%- include('../header') %>

<div class="unix-login">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-4">
                <div class="login-content border border-secondary">
                    <div class="login-form">
                        <h4>MY PROFILE</h4>
                        <% if(message.success){ %>
                        <div class="alert alert-success" role="alert">
                            <%= message.success %>
                        </div>
                        <% } %>
                        <form>
                            <table>
                                <tr>
                                    <td><input type="hidden" name="id"
                                            value="<%=locals.users.id%>"></td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="hidden"
                                            value="<%=locals.users.id%>">
                                    </td>
                                </tr>
                                <tr class="form-group">
                                    <td class="p-3">Name :</td>
                                    <td><input type="text" disabled
                                            class="form-control border border-dark"
                                            value="<%=locals.users.name%>"></td>
                                </tr>
                                <tr class="form-group">
                                    <td class="p-3">Email :</td>
                                    <td><input type="email" disabled
                                            class="form-control border border-dark"
                                            value="<%=locals.users.email%>"></td>
                                </tr>
                                <tr class="form-group">
                                    <td class="p-3">Password :</td>
                                    <td><input type="password" disabled
                                            class="form-control border border-dark"
                                            value="<%=locals.users.password%>"></td>
                                </tr>
                                <tr>
                                    <td>
                                        <button
                                            class="btn btn-primary py-2 mt-4">
                                            <a
                                                href="/editprofile?id=<%=locals.users.id%>"
                                                class="text-white">Edit</a>
                                        </button>
                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>